@model TripGallery.MVCClient.Models.PictureCreateViewModel
@{
    ViewBag.Title = "Add a Picture";
}

<h2 class="leftMarginSmaller">Add a Picture</h2>


@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.TripId)
    <div class="form-horizontal leftMarginDefault"> 
        <div class="form-group">
            <div>You picture's title</div>
            <div>
                @Html.EditorFor(model => model.Picture.Title, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div>Choose your picture</div>
            <div>
                @Html.TextBoxFor(model => model.PictureFile, new { type = "file", accept = "image/jpeg" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
}

 

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
